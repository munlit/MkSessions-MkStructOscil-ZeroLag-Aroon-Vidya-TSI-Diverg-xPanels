	_if_color							= _if_sell	?	"ğŸ”´â¬Š"	:	_if_buy	?	"ğŸŸ¢â¬ˆ"	:	"âšªâ"

	_cond_buy							= _buy >= 80
	_cond_sell							= _sell <= 20

	_signal_color						= _cond_buy ? colorTsiObsPnl_Buy : _cond_sell ? colorTsiObsPnl_Sell : colorTsiObsPnl_Neutral
